(defwidget user []
  (box
    :space-evenly false
    :orientation "h"
    :style "padding-left: 28px; padding-right: 22px;"
    (label 
      :class "username"
      :style "margin-right: 5px;"
      :text "${username == "" ? username_default : username}"
    )
    (box
      :class "userpic"
      :style "background-image: url('/var/lib/AccountsService/icons/${username == "" ? username_default : username}');"
    )
  )
)